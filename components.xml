<?xml version="1.0" encoding="UTF-8"?>
<components>
  <!-- Root App Component -->
  <component name="App">
    <providers>
      <provider name="ErrorBoundary" />
      <provider name="BrowserRouter" />
      <provider name="DatabaseProvider" />
      <provider name="LoadingProvider" />
      <provider name="AuthProvider" />
    </providers>

    <!-- Main Routes -->
    <routes>
      <!-- Public Routes -->
      <route path="/" component="PublicHome">
        <components>
          <component name="LoginForm" />
          <component name="SignUpForm" />
          <component name="Hero" />
          <component name="Features" />
        </components>
      </route>

      <!-- Protected Routes -->
      <route path="/dashboard" component="Dashboard" protected="true">
        <components>
          <component name="TopicList" />
          <component name="TopicCard" />
          <component name="ProgressStats" />
        </components>
      </route>

      <route path="/topic/:id" component="TopicLearning" protected="true">
        <components>
          <component name="PageLayout">
            <components>
              <component name="LearningProgress" />
              <component name="LearningTree" />
              <component name="ChatInterface" />
            </components>
          </component>
          <component name="AlertDialog" />
        </components>
      </route>

      <route path="/new-topic" component="NewTopicSetup" protected="true">
        <components>
          <component name="TopicForm" />
          <component name="LessonEditor" />
        </components>
      </route>

      <route path="/admin" component="AdminPage" protected="true" role="admin">
        <components>
          <component name="UserManagement" />
          <component name="TopicManagement" />
          <component name="SystemSettings" />
        </components>
      </route>
    </routes>

    <!-- Shared Components -->
    <shared>
      <component name="ProtectedRoute" />
      <component name="RoleGuard" />
      <component name="ErrorBoundary" />
      <component name="Toaster" />
    </shared>

    <!-- UI Components -->
    <ui>
      <component name="Button" />
      <component name="Input" />
      <component name="Textarea" />
      <component name="Card" />
      <component name="Dialog" />
      <component name="DropdownMenu" />
      <component name="Form" />
      <component name="Toast" />
      <component name="Progress" />
      <component name="ErrorMessage" />
      <component name="Badge" />
      <component name="Tabs" />
      <component name="Chart" />
    </ui>
  </component>
</components>
